<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_past"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/mcv_action_previous"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:tint="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_month_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="5月"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="2018" />
        </LinearLayout>



        <ImageView
            android:id="@+id/btn_future"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/mcv_action_next"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:tint="#000000"/>

    </RelativeLayout>

    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        app:calendar_content_view_id="@+id/recyclerView">

        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#fff"
            app:current_month_text_color="#333333"
            app:current_month_lunar_text_color="#CFCFCF"
            app:min_year="2004"
            app:calendar_height="40dp"
            app:other_month_text_color="#e1e1e1"
            app:scheme_text="假"
            app:day_text_size="12sp"
            app:lunar_text_size="8sp"
            app:scheme_text_color="#333"
            app:selected_lunar_text_color="#CFCFCF"
            app:scheme_theme_color="#128c4b"
            app:month_view="com.ljn.buglysimple.calendar.SimpleMonthView"
            app:week_view="com.ljn.buglysimple.calendar.SimpleWeekView"
            app:selected_text_color="#333"
            app:selected_theme_color="#80cfcfcf"
            app:week_background="#fff"
            app:week_text_color="#111"
            app:year_view_day_text_color="#333333"
            app:year_view_day_text_size="9sp"
            app:year_view_month_text_color="#ff0000"
            app:year_view_month_text_size="20sp"
            app:month_view_show_mode="mode_fix"
            app:year_view_scheme_color="#f17706"/>

        <com.ljn.buglysimple.group.GroupRecyclerView
            android:id="@+id/recyclerView"
            app:group_background="@color/content_background"
            app:group_center="false"
            app:group_height="42dp"
            app:group_has_header="false"
            app:group_padding_left="16dp"
            app:group_padding_right="16dp"
            app:group_text_size="14sp"
            app:group_text_color="#555555"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!--<TextView-->
            <!--android:id="@+id/vp_content"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="文字"-->
            <!--android:background="@color/colorPrimaryDark"/>-->
    </com.haibin.calendarview.CalendarLayout>

</LinearLayout>